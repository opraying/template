model user {
  /// User ID
  id             String   @id
  /// The user's username
  username       String
  /// The user's email address
  email          String   @unique
  /// Whether the user's email has been verified
  email_verified Boolean  @default(false)
  /// The user's avatar
  avatar         String
  /// a string to be decoded into a DateTime.Utc
  created_at     DateTime
  /// a string to be decoded into a DateTime.Utc
  updated_at     DateTime
}

//--------------------------------
// account
//--------------------------------

model account {
  /// Account ID
  id                       String    @id
  /// User ID
  user_id                  String
  /// OAuth Provider Account ID
  account_id               String?
  /// OAuth Provider ID
  provider_id              String?
  /// OAuth Access Token
  access_token             String?
  /// OAuth Access Token Expiration Date
  access_token_expires_at  DateTime?
  /// OAuth Refresh Token
  refresh_token            String?
  /// OAuth Refresh Token Expiration Date
  refresh_token_expires_at DateTime?
  /// OAuth Scope
  scope                    String?
  /// OAuth ID Token
  id_token                 String?
  /// OAuth Account Raw Data
  raw                      String?
}

