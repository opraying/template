model session {
  /// UUID primary key
  id         String   @id
  /// User ID
  user_id    String
  /// a number to be decoded into a Date
  expires_at DateTime
  /// The IP address of the user
  ip         String?
  /// The user agent of the user
  user_agent String?
}

