{
  "name": "template-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server",
  "projectType": "application",
  "targets": {
    "app-build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/server"],
      "options": {
        "command": "pnpm xdev build --cwd apps/server"
      }
    },
    "app-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm xdev deploy --cwd apps/server"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm xdev serve --cwd apps/server"
      }
    },
    "preview": {
      "dependsOn": ["app-build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm xdev --tsconfig=apps/server/tsconfig.app.json preview --cwd apps/server"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/node_modules/.vitest/apps/server", "{workspaceRoot}/coverage/apps/server"],
      "options": {
        "command": "pnpm xdev test --project template-server"
      }
    },
    "madge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "madge --ts-config ./tsconfig.app.json --circular --no-color --no-spinner --extensions ts,tsx .",
        "cwd": "apps/server"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsgo -p apps/server/tsconfig.check.json"
      }
    },
    "db": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "seed",
      "configurations": {
        "seed": {
          "command": "pnpm xdev db seed --cwd apps/server"
        },
        "push": {
          "command": "pnpm xdev db push --cwd apps/server"
        },
        "dump": {
          "command": "pnpm xdev db dump --cwd apps/server"
        },
        "execute": {
          "command": "pnpm xdev db execute --cwd apps/server"
        },
        "dev": {
          "command": "pnpm xdev db migrate dev --cwd apps/server"
        },
        "reset": {
          "command": "pnpm xdev db migrate reset --cwd apps/server"
        },
        "deploy": {
          "command": "pnpm xdev db migrate deploy --cwd apps/server"
        },
        "resolve": {
          "command": "pnpm xdev db migrate resolve --cwd apps/server"
        }
      }
    }
  }
}
