{
  "name": "template-native",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/native",
  "projectType": "application",
  "targets": {
    "prebuild": {
      "executor": "nx:run-commands",
      "options": { "command": "xdev native prebuild --cwd apps/native" }
    },
    "build": {
      "configurations": {
        "ios": {
          "executor": "nx:run-commands",
          "options": { "command": "xdev native build --cwd apps/native --platform ios" }
        },
        "android": {
          "executor": "nx:run-commands",
          "options": { "command": "xdev native build --cwd apps/native --platform android" }
        }
      },
      "defaultConfiguration": "ios"
    },
    "run": {
      "configurations": {
        "ios": {
          "executor": "nx:run-commands",
          "options": { "command": "xdev native run --cwd apps/native --platform ios" }
        },
        "android": {
          "executor": "nx:run-commands",
          "options": { "command": "xdev native run --cwd apps/native --platform android" }
        }
      },
      "defaultConfiguration": "ios"
    },
    "analyze": {
      "executor": "nx:run-commands",
      "options": { "command": "xdev native analyze --cwd apps/native" }
    },
    "madge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "madge --ts-config ./tsconfig.app.json --circular --no-color --no-spinner --extensions ts,tsx .",
        "cwd": "apps/native"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsgo -p apps/native/tsconfig.check.json"
      }
    }
  },
  "tags": ["native"]
}
