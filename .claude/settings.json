{
  "permissions": {
    "allow": [
      "WebFetch",

      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(cat)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(echo:*)",

      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(jq:*)",

      "Bash(curl:*)",
      "Bash(wget:*)",

      "Bash(git:*)",

      "Bash(nx:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pnpx:*)",

      "Bash(expo:*)",
      "Bash(watchman:*)",
      "Bash(adb:*)",
      "Bash(xcrun:*)",
      "Bash(xcode-select:*)",

      "Bash(docker:*)",
      "Bash(java:*)",
      "Bash(gradle:*)",

      "Bash(python3:*)",
      "Bash(pip:*)",

      "Bash(code:*)",
      "Bash(zed:*)",

      "Bash(which:*)",
      "Bash(whoami)",
      "Bash(ps:*)",
      "Bash(kill:*)",
      "Bash(killall:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(ln:*)",
      "Bash(touch:*)",
      "Bash(tar:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      "Bash(gzip:*)",
      "Bash(gunzip:*)"
    ],
    "deny": [
      "Read(.direnv)",
      "Read(.nx)",
      "Read(.expo)",
      "Read(node_modules)",
      "Read(pnpm-lock.yaml)",
      "Read(.vscode)",
      "Read(.zed)",
      "Read(.cursor)",
      "Read(dist)",
      "Read(build)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(*.tsbuildinfo)",
      "Read(tsconfig*.json)",
      "Read(.react-router)",
      "Read(vite.config.*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_TRACES_EXPORTER": "otlp",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
    "OTEL_TRACES_EXPORT_INTERVAL": "5000",
    "OTEL_METRICS_EXPORT_INTERVAL": "5000",
    "OTEL_LOGS_EXPORT_INTERVAL": "5000"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["context7", "effect docs"],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if echo '$(.tool_input.file_path)' | grep -q '\\\\.ts$'; then prettier --write '$(.tool_input.file_path)'; fi"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ]
  }
}
