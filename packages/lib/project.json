{
  "name": "pkgs-lib",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/lib/src",
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/node_modules/.vitest/packages/lib", "{workspaceRoot}/coverage/packages/lib"],
      "options": {
        "command": "pnpm xdev test --project pkgs-lib"
      }
    },
    "madge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "madge --ts-config ./tsconfig.lib.json --circular --no-color --no-spinner --extensions ts,tsx ./src",
        "cwd": "packages/lib"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsgo -p packages/lib/tsconfig.check.json"
      }
    }
  },
  "tags": []
}
