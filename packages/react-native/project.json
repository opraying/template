{
  "name": "pkgs-react-native",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react-native/src",
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/node_modules/.vitest/packages/react-native",
        "{workspaceRoot}/coverage/packages/react-native"
      ],
      "options": {
        "command": "pnpm xdev test --project pkgs-react-native"
      }
    },
    "madge": {
      "executor": "nx:run-commands",
      "options": {
        "command": "madge --ts-config ./tsconfig.lib.json --circular --no-color --no-spinner --extensions ts,tsx ./src",
        "cwd": "packages/react-native"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsgo -p packages/react-native/tsconfig.check.json"
      }
    }
  },
  "tags": []
}
